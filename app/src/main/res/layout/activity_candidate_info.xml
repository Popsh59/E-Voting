<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CandidateInfo"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
           >

            <ImageView
                android:id="@+id/CandidatePhoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:foregroundGravity="center"
                android:padding="3dp"
                android:scaleType="centerInside"/>

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/candidateNameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Candidate Name"
        android:textColor="@color/colorAccent"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="32dp"
        android:gravity="center"
        tools:ignore="DuplicateIds" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/PartyNameTv"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:text="Party Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/v"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:text="Votes"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/NumberOfVotes"
            android:layout_width="143dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:text="StuNo"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="32dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="421dp"
        android:layout_height="427dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="423dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:text="Email Address here"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/sendEmailButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_1"
                    android:gravity="center"
                    android:text="Send Email"
                    tools:ignore="OnClick" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/FieldOfStudyTv"
                    android:layout_width="419dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:text="Field of study here"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/IdNumberTv"
                    android:layout_width="408dp"
                    android:layout_height="47dp"
                    android:gravity="center"
                    android:text="ID number here"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>